{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"allowUnreachableCode": false,
		"sourceMap": true,
		"strictPropertyInitialization": false,
		"typeRoots": ["node_modules/@types", "src/typings"],
		"lib": ["dom", "es5", "esnext", "scripthost"],
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
